<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        tools:text="3"
        android:id="@+id/PITCH_LIST_ITEM_pitch_index"
        app:layout_constraintStart_toStartOf="parent"
        android:minWidth="30dp"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        />

    <TextView
        tools:text="Strike"
        android:id="@+id/PITCH_LIST_ITEM_pitch_description"
        app:layout_constraintStart_toEndOf="@id/PITCH_LIST_ITEM_pitch_index"
        app:layout_constraintEnd_toStartOf="@id/PITCH_LIST_ITEM_pitch_info"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:paddingStart="@dimen/default_padding_small"
        android:paddingEnd="@dimen/default_padding_small"
        />\

    <TextView
        tools:text="95.4 MPH Knuckleball"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/PITCH_LIST_ITEM_pitch_info"
        android:gravity="center_vertical"
        android:layout_weight="0"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:paddingStart="@dimen/default_padding_small"
        android:paddingEnd="@dimen/default_padding_small" />

</android.support.constraint.ConstraintLayout>