<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="behavior_show_video_quality_options"
        android:title="@string/pref_title_show_quality_options"
        />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/video_quality_keys"
        android:entryValues="@array/video_quality_values"
        android:key="display_video_quality"
        android:title="@string/pref_title_video_quality"/>

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/thumbnail_quality_keys"
        android:entryValues="@array/thumbnail_quality_values"
        android:key="display_thumbnail_quality"
        android:title="@string/pref_title_thumbnail_quality"/>

</PreferenceScreen>
